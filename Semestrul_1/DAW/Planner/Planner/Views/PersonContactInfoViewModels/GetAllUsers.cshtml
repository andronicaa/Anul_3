@model List<Planner.Models.Person>

<link href="~/Content/Style/person.css" rel="stylesheet"/>
<br />
<br />
<h3>Lista utilizatorilor</h3>
<br />

<div class="cardContainer">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"><i class="fa fa-user"></i> &nbsp; Nume</th>
                    <th scope="col"><i class="fa fa-user"></i>  &nbsp; Prenume</th>
                    <th scope="col"><i class="fa fa-pencil"></i> &nbsp;Update</th>
                    <th scope="col"><i class="fa fa-info"></i> &nbsp;Detalii</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nume</td>
                        <td>@item.Prenume</td>
                        <td>
                            @using (Html.BeginForm(actionName: "EditPerson", controllerName: "PersonContactInfoViewModels", method: FormMethod.Get, routeValues: new { id = item.PersonId }))
                            {
                                <button class="btn btn-warning" type="submit"><i class="fa fa-pencil"></i> &nbsp; Update</button>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm(actionName: "Details", controllerName: "PersonContactInfoViewModels", method: FormMethod.Get, routeValues: new { id = item.PersonId }))
                            {
                                <button class="btn btn-info" type="submit"><i class="fa fa-info"></i> &nbsp; Detalii</button>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>

