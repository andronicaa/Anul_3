@model List<Planner.Models.Product>


<link rel="stylesheet" href="~/Content/Style/apt.css" />
<h3>Produse</h3>
<br />
@using (Html.BeginForm(actionName: "NewProduct", controllerName: "Products", method: FormMethod.Get))
{

    <button class="btn btn-primary" type="submit">Adauga produst</button>
}
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Denumire</th>
            <th scope="col">Cantitate</th>
            <th scope="col">Detalii</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Denumire</td>
                <td>@product.Cantitate</td>
                <td>
                    @using (Html.BeginForm(actionName: "DetaliiProdus", controllerName: "Products", method: FormMethod.Get, routeValues: new { id = product.ProductId }))
                    {

                        <button class="btn btn-primary" type="submit">Detalii</button>
                    }
                </td>
            </tr>

        }
    </tbody>
</table>

@using (Html.BeginForm(actionName: "Index", controllerName: "ShoppingList", method: FormMethod.Get))
{

<button class="btn btn-warning" type="submit"><i class="fa fa-list" aria-hidden="true"></i> &nbsp;Liste cumparaturi</button>
}