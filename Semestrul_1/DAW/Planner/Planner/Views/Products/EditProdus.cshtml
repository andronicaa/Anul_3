@model Planner.Models.Product

<br />
<br />

<div class="panel panel-info">
    <div class="panel-heading">
        <h3>Editeaza acest produs</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(actionName: "UpdateProdus", controllerName: "Products", method: FormMethod.Post, routeValues: new { id = Model.ProductId }))
        {
            @Html.Label("Cantitate", "Cantitate: ")
            <br />
            @Html.EditorFor(b => b.Cantitate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(b => b.Cantitate, "", new { @class = "text-danger" })
            <br />
            <br />
            @Html.Label("Denumire", "Denumire: ")
            <br />
            @Html.EditorFor(b => b.Denumire, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(b => b.Denumire, "", new { @class = "text-danger" })
            <br />
            <br />
            @Html.Label("Descriere", "Descriere: ")
            <br />
            @Html.EditorFor(b => b.Descriere, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(b => b.Descriere, "", new { @class = "text-danger" })
            <br />
            <br />
            @Html.Label("Necesitate", "Necesitate: ")
            <br />
            @Html.EnumDropDownListFor(b => b.Necesitate, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.Necesitate, "", new { @class = "text-danger" })
            <br />
            <br />
            <button class="btn btn-primary" type="submit">Update lista</button>
        }
    </div>
</div>




