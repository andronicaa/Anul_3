@model Planner.Models.Appointment
    
<link rel="stylesheet" href="~/Content/Style/apt.css" />

<br />
<br />
<div class="panel panel-warning">
    <div class="panel-heading">
        <p>@Model.AppointmentType</p>
    </div>
    <div>
        <ul>
            <li><strong>Data:</strong><p>@Model.Data</p></li>
            <li><strong>Detalii:</strong><p>@Model.Detalii</p></li>
            <li><strong>Adresa:</strong><p>@Model.Adresa</p></li>
            <li><strong>Persoane:</strong><p>@Model.Persoane</p></li>
        </ul>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm(actionName: "Index", controllerName: "Appointments", method: FormMethod.Get))
        {
            <button class="btn btn-info" type="submit"><i class="fa fa-home"></i> &nbsp; Lista programari</button>
        }
        <br />
        @using (Html.BeginForm(actionName: "DeleteApt", controllerName: "Appointments", method: FormMethod.Post, routeValues: new { id = Model.AppointmentId }))
        {
            <button class="btn btn-danger" type="submit"><i class="fa fa-home"></i> &nbsp; Sterge programare</button>
        }
    </div>
</div>

