@model Planner.Models.Invoice
<link rel="stylesheet" href="~/Content/Style/apt.css" />
<br />
<br />
@using (Html.BeginForm(actionName: "Index", controllerName: "Invoices", method: FormMethod.Post))
{
    <button class="btn btn-info" type="submit"><i class="fa fa-arrow-left"></i> &nbsp;Home</button>
}
<br />
<div class="panel panel-info">
    <div class="panel-heading">@Model.TipFactura</div>
    <div class="panel-body">
        <ul>
            <li><strong>Data emitere: </strong> @Model.DataEmitere</li>
            <li><strong>Data scadenta: </strong> @Model.DataScadenta</li>
            <li><strong>Total plata: </strong> @Model.TotalPlata</li>
            <li><strong>Data status: </strong> @Model.Status</li>
        </ul>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm(actionName: "DeleteInvoice", controllerName: "Invoices", method: FormMethod.Post, routeValues: new { id = Model.InvoiceId }))
        {
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> &nbsp;Sterge factura</button>
        }
    </div>
</div>


