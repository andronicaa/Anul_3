@model Planner.Models.UserViewModel
@{
    ViewBag.Title = "Editeaza rolul unui user";
}

<link rel="stylesheet" href="~/Content/Style/apt.css"/>
<br />
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Users", routeValues: new { id = @Model.User.Id }))
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            @Html.HttpMethodOverride(HttpVerbs.Put)
            @Html.HiddenFor(m => m.User.Id)
            <br />

            @Html.LabelFor(m => m.User.Email, "Email:")
            <br />
            @Html.EditorFor(m => m.User.Email, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            <br />

            @Html.LabelFor(m => m.RoleName, "Role:")
            <br />
            @Html.EditorFor(m => m.RoleName, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            <br />
        </div>
        <div class="panel-footer">
            <button class="btn btn-sm btn-success" type="submit"><i class="fa fa-pencil"></i> &nbsp; Update</button>
        </div>
    </div>

}

@using (Html.BeginForm(actionName: "Index", controllerName: "Users"))
{
    <button class="btn btn-sm btn-info" type="submit"><i class="fa fa-home"></i> &nbsp; Home</button>
}