@{
    ViewBag.Title = "Utilizatori"; }

<link rel="stylesheet" href="~/Content/Style/apt.css"/>
<br />
<br />

<div class="panel panel-info">
    <div class="panel-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
            <th>Username</th>
            <th>Email</th>
            <th>Update</th>
            <th>Detalii</th>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.UsersList)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @using (Html.BeginForm(actionName: "Edit", controllerName: "Users", method: FormMethod.Get, routeValues: new { id = user.Id }))
                            {
                                <button class="btn btn-warning" type="submit"><i class="fa fa-pencil"></i> &nbsp; Update</button>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm(actionName: "Details", controllerName: "Users", method: FormMethod.Get, routeValues: new { id = user.Id }))
                            {
                                <button class="btn btn-info" type="submit"><i class="fa fa-info"></i> &nbsp; Detalii</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm(actionName: "Index", controllerName: "Home", method: FormMethod.Get))
        {
            <button class="btn btn-info" type="submit"><i class="fa fa-home"></i> &nbsp; Home</button>
        }
    </div>
</div>
