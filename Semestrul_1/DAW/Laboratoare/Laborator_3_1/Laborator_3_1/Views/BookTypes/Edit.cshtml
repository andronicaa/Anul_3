@model Laborator_3_1.Models.BookType
@{
    ViewBag.Title = "Update book type";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Update", controllerName: "BookTypes", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.BookTypeId)

    @Html.Label("Name", "Name:")
    <br />
    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}